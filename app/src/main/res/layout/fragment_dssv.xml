<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_content"
    tools:context=".fragment.DSSVFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/style_title"
            android:text="QUẢN LÝ HỌC SINH"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="Lớp: "
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLop"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="12"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="Giáo viên: "
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGV"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:text="Lù Vĩnh Trường"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:hint="Tìm kiếm"
                android:textColor="#000"
                android:id="@+id/edtTimKiem"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageTimKiem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_action_search" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/buttonTruoc"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textSize="12dp"
                android:backgroundTint="#FFBF44"
                android:layout_marginLeft="1dp"
                android:text="TRƯỚC"/>

            <Button
                android:id="@+id/buttonSau"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textSize="12dp"
                android:backgroundTint="#FFBF44"
                android:layout_marginLeft="3dp"
                android:text="SAU"/>


            <Button
                android:id="@+id/buttonBC"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="90dp"
                android:backgroundTint="#61DF74"
                android:drawableRight="@drawable/export"
                android:text="XEM BÁO CÁO"
                android:textSize="11dp" />
        </LinearLayout>

        <!--    <EditText-->
        <!--        android:id="@+id/inputSearch"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="50dp"-->
        <!--        android:hint="Search products.."-->
        <!--        android:src="@android:drawable/ic_menu_search"-->
        <!--        android:inputType="textVisiblePassword"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="3dp"
                android:background="#BEF2FD"
                android:text="MS"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:background="#BEF2FD"
                android:text="HỌ"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:background="#BEF2FD"
                android:text="TÊN"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="#BEF2FD"
                android:text="PHÁI"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="#BEF2FD"
                android:text="NGÀY SINH"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#BEF2FD"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/listViewMSHS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </ListView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/buttonThem"
        android:layout_marginLeft="1dp"
        android:backgroundTint="#00D1FF"
        app:srcCompat="@android:drawable/ic_input_add"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>