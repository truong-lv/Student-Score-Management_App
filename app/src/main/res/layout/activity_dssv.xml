<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    tools:context=".DSSV">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="QUẢN LÝ HỌC SINH"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="Lớp: "
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLop"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="12"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:text="Giáo viên: "
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textGV"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:text="Lù Vĩnh Trường"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/buttonTruoc"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="1dp"
            android:text="TRƯỚC"/>

        <Button
            android:id="@+id/buttonSau"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="1dp"
            android:text="SAU"/>

        <Button
            android:id="@+id/buttonThem"
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:layout_marginLeft="1dp"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:background="@drawable/backgound_button"
            android:text="THÊM" />

        <Button
            android:id="@+id/buttonBC"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="1dp"
            android:drawableRight="@drawable/export"
            android:text="IN BÁO CÁO"/>
    </LinearLayout>

    <!--    <EditText-->
    <!--        android:id="@+id/inputSearch"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="50dp"-->
    <!--        android:hint="Search products.."-->
    <!--        android:src="@android:drawable/ic_menu_search"-->
    <!--        android:inputType="textVisiblePassword"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="MSHS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="HỌ"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="TÊN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="PHÁI"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="NGÀY SINH"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:layout_marginLeft="5dp"
        android:id="@+id/listViewMSHS"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </ListView>




</LinearLayout>