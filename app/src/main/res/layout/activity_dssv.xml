<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    tools:context=".DSSV">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="QUẢN LÝ HỌC SINH"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="Lớp:"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:text="Giáo Viên:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/buttonTruoc"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="5dp"
            android:text="TRƯỚC"/>

        <Button
            android:id="@+id/buttonSau"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="5dp"
            android:text="SAU"/>

        <Button
            android:id="@+id/buttonBC"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="60dp"
            android:text="IN BÁO CÁO"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="MSHS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="HỌ"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="TÊN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="PHÁI"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="#BEF2FD"
            android:text="NGÀY SINH"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewMSHS"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMSHS"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:text="MSHS" />

        <TextView
            android:id="@+id/textViewHO"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:text="HO" />

        <TextView
            android:id="@+id/textViewTEN"
            android:layout_width="71dp"
            android:layout_height="25dp"
            android:text="TEN" />

        <TextView
            android:id="@+id/textViewPHAI"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:text="PHAI" />

        <TextView
            android:id="@+id/textViewNS"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="NGAYSINH" />
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <Button
            android:id="@+id/buttonXoa"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="5dp"
            android:text="XÓA"/>

        <Button
            android:id="@+id/buttonSua"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/backgound_button"
            android:layout_marginLeft="5dp"
            android:text="SỬA"/>

        <Button
            android:id="@+id/buttonThem"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/backgound_button"
            android:text="THÊM" />

    </LinearLayout>
</LinearLayout>