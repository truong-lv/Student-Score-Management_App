<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_report_item"
    android:layout_marginBottom="10dp"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STT: "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvSTTRpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã học sinh: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvIdStudentRpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="236"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên học sinh: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvNameStudentRpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvGenderStudentRpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh: "
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvBirthStudentRpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Điểm tổng kết"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <TableLayout
        android:id="@+id/tbListScore"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BEF2FD"
            android:padding="10dp">
            <TextView
                android:text="STT"
                android:textStyle="bold"
                android:layout_marginRight="40dp"/>
            <TextView
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:text="Tên MH"/>
            <TextView
                android:layout_marginRight="40dp"
                android:textStyle="bold"
                android:text="Hệ số"/>
            <TextView
                android:textStyle="bold"
                android:text="Điểm"/>
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
    <TextView
        android:id="@+id/tvSumSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng số môn học:"
        android:textStyle="bold"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/tvAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điểm trung bình:"
        android:textStyle="bold"
        android:layout_marginRight="40dp"/>
    </LinearLayout>
</LinearLayout>