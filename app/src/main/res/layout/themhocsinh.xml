<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:background="@drawable/background_login"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center|top"
        android:text="THÔNG TIN HỌC SINH"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="HỌ:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNhapHo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="TÊN:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNhapTen"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="PHÁI:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNhapPhai"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="NGÀY SINH:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNhapNgaySinh"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonHUY"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:drawableRight="@android:drawable/ic_delete"
            android:background="@drawable/backgound_button"
            android:text="HỦY" />

        <Button
            android:id="@+id/buttonLUU"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@android:drawable/ic_menu_save"
            android:background="@drawable/backgound_button"
            android:text="LƯU" />

    </LinearLayout>


</LinearLayout>