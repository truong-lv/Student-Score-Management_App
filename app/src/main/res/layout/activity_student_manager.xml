<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUẢN LÝ HỌC SINH"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/vien"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Họ và tên:"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name?"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tvHoTen"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lớp: "
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Class?"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tvLop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ngày Sinh:"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="DOB?"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tvNgaySinh"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Giới Tính:"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sex?"
                android:textColor="#000"
                android:layout_weight="3"
                android:id="@+id/tvPhai"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="&lt;&lt; Trước"
            android:textStyle="bold"
            android:backgroundTint="#FFBF44"
            android:id="@+id/btnTruoc"
            />
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Sau &gt;&gt;"
            android:textStyle="bold"
            android:backgroundTint="#FFBF44"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSau"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:stretchColumns="*"
        android:id="@+id/tbDiem">
        <TableRow>
            <TextView
                android:text="Mã MH"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView
                android:text="Tên MH"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />
            <TextView
                android:text="ĐIỂM"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                />

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng số môn học: ?"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm trung bình: ?"
            android:textSize="20dp"
            android:gravity="end"/>
    </LinearLayout>
    <Button
        android:layout_gravity="end"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Nhập điểm"
        android:layout_marginTop="20dp"
        android:backgroundTint="#43D310"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_action_save"
        >

    </Button>


</LinearLayout>